<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ankieta.MainWindow"
        Title="Ankieta Preferencji">
    
        <Grid Background="DarkTurquoise">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        
            <!--Column 1-->
            <Border Grid.Row="0" Grid.Column="0" BorderThickness="2" BorderBrush="Black">
                <TextBlock Padding="5" TextAlignment="Center" Text="Ankieta Preferencji" Foreground="Snow" Background="DimGray" />
            </Border>
            
            <TextBox Grid.Row="1" Grid.Column="0" Margin="10" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Watermark="Wpisz swoje imię" Foreground="DarkGray" Background="LightBlue"/>
            
            <ComboBox Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" Margin="30, 10" Padding="5">
                <ComboBoxItem Content="Technologia"/>
                <ComboBoxItem Content="Sport"/>
                <ComboBoxItem Content="Kultura"/>
                <ComboBoxItem Content="Rozrywka"/>
            </ComboBox>
            
            <Button Grid.Row="3" Grid.Column="0" Margin="10" Padding="5" HorizontalAlignment="Center" Content="Zatwierdź dane" Foreground="Crimson" Background="LightCoral"/>
            
            <!--Column 2-->
            <Border Grid.Row="0" Grid.Column="1" BorderThickness="2" BorderBrush="Black">
                <TextBlock Padding="5" TextAlignment="Center" Text="Pytania" Foreground="Snow" Background="DimGray"/>
            </Border>
            
            <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
            
                <WrapPanel Grid.Row="1" VerticalAlignment="Stretch">
                    <TextBlock Margin="10" Padding="5" Text="Czy lubisz programować?"/>
                    <CheckBox Margin="10" Padding="5" Content="Tak"/>
                </WrapPanel>
                
                <WrapPanel Grid.Row="2" VerticalAlignment="Stretch">
                    <TextBlock Grid.Row="3" Margin="10" Padding="5" Text="Czy interesuje Cię Sztuczna Inteligencja?"/>
                    <CheckBox Grid.Row="4" Margin="10" Padding="5" Content="Tak"/>
                </WrapPanel>
                
                <WrapPanel Grid.Row="3" VerticalAlignment="Stretch">
                    <TextBlock Grid.Row="5" Margin="10" Padding="5" Text="Czy lubisz grać w gry wideo?"/>
                    <CheckBox Grid.Row="6" Margin="10" Padding="5" Content="Tak"/>
                </WrapPanel>
            </Grid>
            
            <!--Column 3-->
            <Border Grid.Row="0" Grid.Column="2" BorderThickness="2" BorderBrush="Black">
                <TextBlock Padding="5" TextAlignment="Center" Text="Podsumowanie" Foreground="Snow" Background="DimGray"/>
            </Border>
            
            <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="10" Padding="5" Content="Wyświetl wyniki" Foreground="ForestGreen" Background="LimeGreen"/>
            
            <StackPanel Grid.Row="2" Grid.Column="2" Margin="10">
                <TextBlock TextAlignment="Center" Text="Imie, kategoria, liczba odpowiedzi na Tak" />
            </StackPanel>
        </Grid>
</Window>
